@using ASP.Models
@model ProdCateViewModels

<div class="boxes">
    @using (Html.BeginForm("Add","Produit"))
    {
        <div>
            <fieldset>
                <legend>Nouveau produit</legend>
                @Html.HiddenFor(m => m.Prod.Id)
                <div class="editor-label">
                    @Html.LabelFor(m => m.Prod.Code)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Prod.Code)
                    <br />
                    @Html.ValidationMessageFor(m => m.Prod.Code, "Entre un code stp", new { @class = "text-danger" })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(m => m.Prod.Libelle)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Prod.Libelle)
                    <br />
                    @Html.ValidationMessageFor(m => m.Prod.Libelle, "Le libelle tu l'as oublié", new { @class = "text-danger" })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(m => m.Prod.Desc)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(m => m.Prod.Desc)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(m => m.Prod.Actif)
                </div>
                <div class="editor-field">
                    @Html.CheckBoxFor(m => m.Prod.Actif)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(m => m.Prod.Stock)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Prod.Stock)
                    <br />
                    @Html.ValidationMessageFor(m => m.Prod.Stock, "Au pire tu mets 0", new { @class = "text-danger" })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(m => m.Prod.Prix)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Prod.Prix)
                    <br />
                    @Html.ValidationMessageFor(m => m.Prod.Prix, "pitié", new { @class = "text-danger" })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(m => m.Prod.Categorie)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(m => m.SelectedCate.Value, Model.Cate)
                </div>
                <p>
                    <input type="submit" class="btn btn-dark but" value="Valider" />
                </p>
            </fieldset>
        </div>
    }
</div>
